<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>Customer</portlet-name>
		<icon>/icons/icon.png</icon>
		<indexer-class>org.xmlportletfactory.olafk.customer.util.CustomerIndexer</indexer-class>
		<open-search-class>org.xmlportletfactory.olafk.customer.util.CustomerOpenSearchImpl</open-search-class>
		<action-url-redirect>true</action-url-redirect>
		<instanceable>false</instanceable>
		<scopeable>true</scopeable>
		<header-portlet-css>/css/Portlet_Customer.css</header-portlet-css>
		<footer-portlet-javascript>/js/javascript.js</footer-portlet-javascript>
		<css-class-wrapper>Customer</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>Invoices</portlet-name>
		<icon>/icons/icon.png</icon>
		<indexer-class>org.xmlportletfactory.olafk.customer.util.InvoicesIndexer</indexer-class>
		<open-search-class>org.xmlportletfactory.olafk.customer.util.InvoicesOpenSearchImpl</open-search-class>
		<action-url-redirect>true</action-url-redirect>
		<instanceable>false</instanceable>
		<scopeable>true</scopeable>
		<header-portlet-css>/css/Portlet_Invoices.css</header-portlet-css>
		<footer-portlet-javascript>/js/javascript.js</footer-portlet-javascript>
		<css-class-wrapper>Invoices</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>create-customers</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>create-customers-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>customer-detail</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>customer-detail-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>mru-customer</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>mru-customer-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>
